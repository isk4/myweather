<div class="container-fluid">
    <div class="row">
        <div class="col-2 d-flex flex-column position-fixed bg-dark vh-100">

            <h2 class="text-light">myWeather</h2>
            <h4 class="text-light">Add city</h4>

            <form action="" id="add-city">

                <select name="new-cities" id="new-cities" required>
                    <option value="" disabled selected>Add a new city</option>
                </select>
                
                <button type="submit">Add</button>
            </form>

            <h4 class="text-light">Show 5-day forecast</h4>

            <form action="" id="show-city">
                <select name="my-cities" id="my-cities">
                    <option value="" disabled selected>Select a city</option>
                </select>

                <button type="submit">Show weather</button>
            </form>
        </div>

        <div class="container col-10 offset-2">
            <div class="position-relative">
                <canvas id="forecast-chart"></canvas>
            </div>
        </div>
    </div>
</div>
